{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for app JSON file format",

  "type": "object",

  "properties": {
    "data_dir": {
      "type": "string",
      "description": "the data base dir storing the downloaded K7 data and calculated Aod data"
    },
    "para_dir": {
      "type": "string",
      "description": "the parameter base dir storing the aod calculating program and cal files"
    },
    "ftp_ip": {
      "type": "string",
      "description": "the ftp ip"
    },
    "ftp_user": {
      "type": "string",
      "description": "the ftp user"
    },
    "ftp_psw": {
      "type": "string",
      "description": "the ftp user password"
    },
    "ftp_root": {
      "type": "string",
      "description": "the default ftp home dir"
    }
  },
  "required": ["para_dir","ftp_ip","ftp_user","ftp_psw","ftp_root"]
}
